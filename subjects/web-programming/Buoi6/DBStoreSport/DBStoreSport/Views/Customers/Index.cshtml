@model IEnumerable<DBStoreSport.Models.Customer>

@{
    ViewBag.Title = "KHÁCH HÀNG";
}
<style>
    body {
        background-color: #2E3440;
        color: #D8DEE9;
    }

    .table {
        background-color: #3B4252;
    }

        .table th {
            background-color: #4C566A;
            color: #ECEFF4;
        }

        .table td {
            color: #E5E9F0;
        }

    h1 {
        color: #88C0D0;
    }

    a {
        color: #81A1C1;
    }

        a:hover {
            color: #5E81AC;
        }
</style>

<h2>KHÁCH HÀNG</h2>

<a href="@Url.Action("Create")" class="btn btn-link">Thêm Khách hàng mới</a>

<table class="table table-bordered">
    <thead class="thead-light">
        <tr>
            <th>Tên Khách hàng</th>
            <th>Phone</th>
            <th>Email</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.NameCus</td>
                <td>@item.PhoneCus</td>
                <td>@item.EmailCus</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = item.IDCus })">Sửa</a> |
                    <a href="@Url.Action("Details", new { id = item.IDCus })">Chi tiết</a> |
                    <a href="@Url.Action("Delete", new { id = item.IDCus })">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
